<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">注文履歴詳細</span></h3>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th>注文情報</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              〒<%= @order.postal_code %></br>
              <%= @order.address %> </br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>

      <div class="col-3">
        <table class="table">
          <thead>
            <tr>
              <th>請求情報</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>商品合計</td>
              <td><%= @order.total_price.to_s(:delimited, delimiter: ',') %></td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <td>ご請求額</td>
              <td><%= (@order.total_price + @order.postage).to_s(:delimited, delimiter: ',') %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row">
        <div class="col-10">
          <table class="table">
            <thead>
              <tr>
                <th>注文内容</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>商品名</td>
                <td>単価（単価）</td>
                <td>個数</td>
                <td>小計</td>
              </tr>
              <% @order.order_details.each do |order_details|%>
                <tr>
                  <td><%= order_details.item.name %></td>
                  <td><%= order_details.purchase_price.to_s(:delimited, delimiter: ',') %></td>
                  <td><%= order_details.quantity %></td>
                  <td><%= (order_details.purchase_price*order_details.quantity).to_s(:delimited, delimiter: ',') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>