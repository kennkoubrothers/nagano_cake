<div class="container">
    <h4 class="p-4">
      <span style="background-color: #EEEEEE">注文情報確認</span>
    </h4>
    <div class="row">
      <table class="customer_orders_table col-7">
        <thead>
          <tr class="common">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image, format:'jpg', size:'70x50' %><span class="ml-4"><%= cart_item.item.name %></span></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited, delimiter: ',') %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= cart_item.subtotal.to_s(:delimited, delimiter: ',') %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <table class="customer_orders_table col-3 offset-1">
        <tr>
          <td class="common">送料</td>
          <td><%= @postage %></td>
        </tr>
        <tr>
          <td class="common">商品合計</td>
          <td><%= @total.to_s(:delimited, delimiter: ',') %></td>
        </tr>
        <tr>
          <td class="common">請求額</td>
          <td><%= @total_price.to_s(:delimited, delimiter: ',') %></td>
        </tr>
      </table>
    </div>
    <div class="row mt-4">
      <div class="col-2">
        <h5>支払方法</h5>
      </div>
      <p class="col-3"><%= @order.payment_method_i18n %></p>
    </div>
    <div class="row mt-4">
      <div class="col-2">
        <h5>お届け先</h5>
      </div>
      <p class="col-7">
        〒<%= @order.postal_code %><%= @order.address %><br>
        <%= @order.name %>
      </p>
    </div>
    <div class="row mt-3 offset-2">
    <%= form_with model: @order,url: orders_back_path,method: :post, local:true do |f| %>
    　<%= f.hidden_field :payment_method %>
    　<%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :total_price, value: @total_price %>
      <%= f.hidden_field :postage, value: @postage %>
      <%= f.hidden_field :select_address, value: params[:order][:select_address] %>
      <div class="col-2  mx-auto ">
        <%= f.submit "入力画面に戻る" ,class:"btn btn-primary btn-lg" %>
      </div>
      <% end %>

    <%= form_with model: @order,url: orders_path,method: :post, local:true do |f| %>
    　<%= f.hidden_field :payment_method %>
    　<%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :total_price, value: @total_price %>
      <%= f.hidden_field :postage, value: @postage %>
      <%= f.hidden_field :select_address, value: params[:order][:select_address] %>
      <div class="col-2  mx-auto ">
        <%= f.submit "注文を確定する" ,class:"btn btn-success btn-lg" %>
      </div>
    <% end %>
    </div>
</div>