<div class="container">
    <h4 class="p-4">
      <span style="background-color: #EEEEEE">注文情報入力</span>
    </h4>
      <div>
        <%= form_with model: @order, url: orders_confirm_path,　method: :post, local: true do |f| %>
          <h5>支払方法</h5>
          <div class="form-group row">
            <div class="col-md-6 ml-5">
              <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
              <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
            </div>
          </div>
          <h5>お届け先</h5>
          <div class="form-group row">
            <div class="col-md-6 ml-5">
              <div class="row">
                <%= f.radio_button :select_address, "0" %>
                <%= f.label :select_address, "ご自身の住所" %>
              </div>
              <div class="row ml-1">
                <%= "〒#{current_customer.postal_code} #{current_customer.address}" %><br>
                <%= "#{current_customer.family_name} #{current_customer.first_name}" %>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col ml-5">
              <div class="row">
                <%= f.radio_button :select_address, "1" %>
                <%= f.label :select_address, "登録先住所から選択" %>
              </div>
              <div class="row ml-1">
                <%= f.select :delivery_id, options_from_collection_for_select(current_customer.deliveries.all, :id, :address_display), prompt: "住所を選択してください" %>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col ml-5">
              <div class="row">
                <%= f.radio_button :select_address, "2" %>
                <%= f.label :select_address, "新しいお届け先" %>
              </div>
              <div class="row ml-1">
                <%= f.label :郵便番号（ハイフンなし）, class: "col-3 col-form-label "%>
                <%= f.text_field :postal_code, placeholder:"0000000", class: "col-3 form-control form-control-sm" %>
              </div>
              <div class="row ml-1">
                <%= f.label :住所, class: "col-sm-3 col-form-label" %>
                <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class: "col-6 form-control form-control-sm" %>
              </div>
              <div class="row ml-1">
                <%= f.label :宛名, class: "col-3 col-form-label" %>
                <%= f.text_field :name, placeholder:"令和道子", class: "col-3 form-control form-control-sm" %>
              </div>
              <div class="row mt-5 offset-2 ">
                <div class="col-3 mx-3">
                <%= link_to "カートに戻る",cart_items_path, class: "btn btn-primary btn-lg" %>
                </div>
                <div class="col-2 mx-3">
                <%= f.submit "確認画面へ進む", class: "btn btn-success btn-lg" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
</div>
