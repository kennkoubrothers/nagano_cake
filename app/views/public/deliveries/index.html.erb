<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">配送先登録/一覧</span></h3>
  </div>

  <div>
    <%= form_with model: @delivery do |f| %>
      <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-3 col-form-label"%>
        <%= f.text_field :postal_code, class: "col-3 form-control form-control-sm" %>
      </div>
      <div class="form-group row">
        <%= f.label :住所, class: "col-sm-3 col-form-label" %>
        <%= f.text_field :address, class: "col-6 form-control form-control-sm" %>
      </div>
      <div class="form-group row">
        <%= f.label :宛名, class: "col-3 col-form-label" %>
        <%= f.text_field :name, class: "col-3 form-control form-control-sm" %>
        <%= f.submit "新規登録", class: "col-1 btn btn-success btn-sm offset-3" %>
      </div>
    <% end %>
  </div>

  <div class="row mt-5">
    <div class="col">
      <table>
        <thead>
          <tr class="table-active">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%# @deliveries.each do |delivery| %>
            <tr>
              <td>2440842</td>
              <td>神奈川県横浜市戸塚区柏尾町3-9-10</td>
              <td>梅沢匠</td>
              <td><%= link_to "編集する", "#", class: "btn btn-success btn-sm" %> <%= link_to "削除する", "#", class: "btn btn-danger btn-sm" %></td>
            </tr>
            <tr>
              <td>4001114</td>
              <td>山梨県甲斐市打返4-15-19</td>
              <td>小沢時男</td>
              <td><%= link_to "編集する", "#", class: "btn btn-success btn-sm" %> <%= link_to "削除する", "#", class: "btn btn-danger btn-sm" %></td>
            </tr>
          <%# end %>
        </tbody>
      </table>
    </div>
  </div>
</div>