<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">注文履歴詳細</span></h3>
  </div>

  <div class="form-group row">
    <div class="col-2">購入者</div>
    <div class="col-2"><%= @order.customer.name %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">注文日</div>
    <div class="col-5"><%= @order.created_at %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">配送先</div>
    <div class="col-5">〒<%= @order.postal_code %> <%= @order.address %> <%= @order.name %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">支払い方法</div>
    <div class="col-5"><%= @order.payment_method %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">注文ステータス</div>
      <%= form_with model: @order, url:admin_order_path(@order.id), method: :patch, local: true do |f| %>
        <td>
          <%= f.select :status, options_from_collection_for_select(Order.statuses_i18n.invert)  %>
          <%= f.submit "更新", class: "btn btn-success mr-5" %>
        </td>
      <% end %>
  </div>

  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
             <td><%= order.order_detail.item.name %></td>
             <td><%= order.order_detail.purchese_price %></td>
             <td><%= order.order_detail.quantity %></td>
             <td><%= order.order_detail.subtotal %></td>
          <%= form_with model: order.order_detail, url:admin_path(@order.order_detail.id), method: :patch, local: true do |f| %>
            <td>
              <%= f.select :making_status, options_from_collection_for_select(OrderDetail.making_statuses_i18n.invert)  %>
              <%= f.submit "更新", class: "btn btn-success mr-5" %>
            </td>
          <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <table>
        <tbody>
          <tr>
            <td>商品合計<%= @total %>円</td>
            <td>送料 <%= @order.postage %>円</td>
            <td>請求金額合計 <strong><%= @total.to_i + @order.postage.to_i %>円</strong></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>