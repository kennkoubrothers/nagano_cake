<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">注文履歴詳細</span></h3>
  </div>

  <div class="form-group row">
    <div class="col-2">購入者</div>
    <div class="col-2"><%= @order.customer.family_name + " " + @order.customer.first_name %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">注文日</div>
    <div class="col-5"><%= @order.created_at.strftime('%Y/%m/%d') %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">配送先</div>
    <div class="col-5">
      〒<%= @order.postal_code %> <%= @order.address %></br>
      </%><%= @order.name %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">支払い方法</div>
    <div class="col-5"><%= @order.payment_method_i18n %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">注文ステータス</div>
      <%= form_with model: @order, url:admin_order_path(@order.id), method: :patch, local: true do |f| %>
        <td>
          <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
          <%= f.submit "更新", class: "btn btn-success mr-5" %>
        </td>
      <% end %>
  </div>

  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
             <td><%= order_detail.item.name %></td>
             <td><%= order_detail.purchase_price %></td>
             <td><%= order_detail.quantity %></td>
             <td><%= order_detail.subtotal %></td>
          <%= form_with model: order_detail, url:admin_path(order_detail.id), method: :patch, local: true do |f| %>
            <td>
              <%= f.select :making_status, OrderDetail.making_statuses.keys.map  {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
              <%= f.submit "更新", class: "btn btn-success mr-5" %>
            </td>
          <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4 my-5">
      <div class="d-flex">
        <div><strong>商品合計</strong></div>
        <div class="offset-5"><%= @total %>円</div>
      </div>
      <div class="d-flex">
        <div><strong>送料</strong></div>
        <div class="offset-6"><%= @postage %>円</div>
      </div>
      <div class="d-flex">
        <div><strong>請求金額合計</strong></div>
        <div class="offset-4"><%= @total + @postage %>円</div>
      </div>
    </div>
  </div>
</div>