<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">会員一覧</span></h3>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <table class="table table-hover admin_customers_table">
        <thead class="table-active">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><u><%=link_to customer.family_name + customer.first_name, admin_customer_path(customer.id), class: "text-dark" %></u></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <div>
     <%= paginate @customers %>
    </div>
  </div>
</div>
