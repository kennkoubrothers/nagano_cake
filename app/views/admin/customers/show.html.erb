<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header"><%= @customer.family_name + @customer.first_name%>さんの会員情報</span></h3>
  </div>

  <div class="form-group row">
    <div class="col-2">会員ID</div>
    <div class="col-2"><%= @customer.id%></div>
  </div>

  <div class="form-group row">
    <div class="col-2">氏名</div>
    <div class="col-5"><%= @customer.family_name + " " + @customer.first_name %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">フリガナ</div>
    <div class="col-5"><%= @customer.family_name_kana + " " + @customer.first_name_kana %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">郵便番号</div>
    <div class="col-5"><%= @customer.postal_code %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">住所</div>
    <div class="col-8"><%= @customer.address %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">電話番号</div>
    <div class="col-5"><%= @customer.telephone %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">メールアドレス</div>
    <div class="col-5"><%= @customer.email %></div>
  </div>

  <div class="form-group row">
    <div class="col-2">会員ステータス</div>
    <% if @customer.is_deleted == false %>
      <div class="col-2 text-success">有効</div>
    <% else %>
      <div class="col-2 text-secondary">退会</div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-7 offset-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5"%>
      <%= link_to "注文履歴一覧を見る", admin_customer_index_path(@customer.id), class: "btn btn-primary"%>
    </div>
  </div>
</div>