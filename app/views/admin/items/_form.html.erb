  <div class="form-group">
    <%= f.label :"商品画像", class: "col-md-4 control-label" %>
    <%= f.attachment_field :image, class: "col-md-6 form-control-static" %>
  </div>
  <div class="form-group">
    <%= f.label :"商品名", class: "col-md-4 control-label" %>
    <%= f.text_field :name, class: "col-md-6 form-control-static item_name" %>
  </div>
  <div class="form-group">
    <%= f.label :"商品説明", class: "col-md-4 control-label align-top" %>
    <%= f.text_area :explanation, class: "col-md-6" %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル", class: "col-md-4 control-label" %>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class: "col-md-6 form-control") %>
  </div>
  <div class="form-group">
    <%= f.label :"税抜価格", class: "col-md-4 control-label" %>
    <%= f.text_field :price, class: "col-md-6 form-control-static" %>円
  </div>
  <div class="form-group">
    <%= f.label :"販売ステータス", class: "col-md-4 control-label" %>
    <%= f.radio_button :is_active, true %>販売中
    <%= f.radio_button :is_active, false %>販売停止中
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success offset-5' %>
  </div>
