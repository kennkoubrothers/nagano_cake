<div class="container">
  <div class="row">
    <div class="col-3">
      <h3 class="p-3"><span class="header">商品一覧</span></h3>
    </div>
    <div class="col-1 offset-8 p-2">
      <%= link_to new_admin_item_path, class: "ml-auto text-dark" do %>
       <i class="fa-solid fa-circle-plus fa-3x icon"></i>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-10 offset-1">
    <table class="table table-hover admin_items_table">
      <thead class="table-active">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <u><%=link_to item.name, admin_item_path(item.id), class: "text-dark" %></u>
            </td>
            <td>
              <%= item.with_tax_price.to_s(:delimited, delimiter: ',') %>(税込)
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.is_active == true %>
                <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-secondary font-weight-bold">販売停止中</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
