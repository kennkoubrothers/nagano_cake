<div class="container">
  <div class="row">
    <h3 class="p-5">
      <span style="background-color: #EEEEEE">ジャンル一覧・追加</span>
    </h3>
  </div>

  <div class="row">
    <p class="genre-name">
      <strong>ジャンル名</strong>
      <span class="mx-5">
        <%= form_with model: @genre, url:admin_genres_path, method: :post, local: true do |f| %>
         <%= f.text_field :name, autofocus: true, placeholder: "ジャンル名" %>
         <span class="ml-5"></span>
         <%= f.submit '新規登録', class:"btn btn-success btn-lg" %>
        <% end %>
      </span>
    </p>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr style="background-color: #EEEEEE">
          <th colspan="5">
            <span class="head">ジャンル</span>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
           <%= genre.name %>
          </td>
          <td>
           <span class="body">
             <%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success btn-lg" %>
           </span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>