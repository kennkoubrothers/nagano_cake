<div class="container">
  <div class="row">
    <h3 class="p-5">
      <span style="background-color: #EEEEEE">ジャンル一覧・追加</span>
    </h3>

    <div>
      <p>ジャンル名</p>

      <%= form_with model: @genre, url:admin_genres_path, method: :post, local: true do |f| %>
       <%= f.text_field :name, autofocus: true, placeholder: "ジャンル名" %>
       <%= f.submit '新規登録', class:"btn btn-success btn-lg" %>
      <% end %>
    </div>

    <div>
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre), class:"btn btn-success btn-lg" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>